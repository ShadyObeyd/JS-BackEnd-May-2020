<div class="container">

    <main>
        <div class="container">
            <h1 class="my-4">Course title : {{title}}
            </h1>

            <div class="row">

                <div class="col-md-8">
                    <img class="img-fluid" src="{{imageUrl}}"/>
                </div>

                <div class="col-md-4 text-center">
                    <h3 class="my-3">Course Description</h3>
                    <p>{{description}}</p>
                    {{#if creator}}
                    <a href="/course-delete/{{_id}}"><button type="button" class="btn btn-danger">Delete</button></a>
                    <a href="/course-edit/{{_id}}"><button type="button" class="btn btn-warning">Edit</button></a>
                    {{else}}
                        {{#if enrolled}}
                        <a href="/details/{{_id}}"><button type="button" class="btn btn-success">You are already enrolled</button></a>
                        {{else}}
                        <a href="/enroll/{{_id}}"><button type="button" class="btn btn-primary">Enroll</button></a>
                        {{/if}}
                    {{/if}}
                </div>
            </div>

            <h4 class="text-center">To get full access please enroll the course</h4>
        </div>
    </main>

</div>