<div class="container">

    <main>
        <h1 class="text-center">Courses</h1>
        <div class="row">
            <div class="col">
                <a href="/course-create"><button type="button" class="btn btn-warning btn-lg">Create Course</button></a>
            </div>
            <div class="col">
                <form class="search" action="/search" method="POST">
                    <label>Search: </label>
                    <input type="text" name="search">
                    <input type="submit" value="Search" class="btn btn-info">
                </form>
            </div>
        </div>

        <div class="container mt-3">
            <div class="row ">
                <div class="card-deck d-flex justify-content-center">

                    {{#each courses}}
                    <div class="card mb-4">
                        <img class="card-img-top"
                            src="{{imageUrl}}"
                            alt="Card image cap" width="400">
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                            <p class="card-text">{{description}}</p>
                        </div>
                        <div class="card-footer">
                            <a href="/details/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>

    </main>
</div>